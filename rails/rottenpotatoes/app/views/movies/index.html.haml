-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead 
    = form_tag movies_path, :method => :get, id: 'ratings_form' do
      Include: 
      - @all_ratings.each do |rating,status|
        = rating
        = check_box_tag "ratings[#{rating}]",1, status
      = submit_tag 'Refresh', id: 'ratings_submit'
    %tr
      %th{:class => @class_t}= link_to 'Movie Title', movies_path(order: 'title'), id: 'title_header'
      %th Rating
      %th{:class => @class_r}= link_to 'Release Date', movies_path(order: 'release'), id: 'release_date_header'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
